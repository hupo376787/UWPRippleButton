<Page
    x:Class="UWPRippleButton.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPRippleButton"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeMediumAcrylicWindowMediumBrush}">

    <!--More info refer to https://github.com/MaterialDesignInXAML/MaterialDesignInXamlToolkit-->
    <Grid>
        <Border Width="500" Height="300" CornerRadius="20">
            <Button Width="500" Height="300" Content="Ripple Button"
                    HorizontalAlignment="Center"
                    Background="{ThemeResource SystemControlForegroundAccentBrush}" 
                    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
        </Border>
    </Grid>
</Page>
